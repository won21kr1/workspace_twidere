<resources>

	<style name="Widget.ListPopupWindowCompat" parent="android:Widget">
		<item name="android:dropDownSelector">@drawable/mc__list_selector_holo_dark</item>
		<item name="android:popupBackground">@drawable/mc__menu_dropdown_panel_holo_dark</item>
		<item name="android:dropDownVerticalOffset">0dip</item>
		<item name="android:dropDownHorizontalOffset">0dip</item>
		<item name="android:dropDownWidth">wrap_content</item>
	</style>

	<style name="Widget.ListPopupWindowCompat.Light" parent="android:Widget">
		<item name="android:dropDownSelector">@drawable/mc__list_selector_holo_light</item>
		<item name="android:popupBackground">@drawable/mc__menu_dropdown_panel_holo_light</item>
		<item name="android:dropDownVerticalOffset">0dip</item>
		<item name="android:dropDownHorizontalOffset">0dip</item>
		<item name="android:dropDownWidth">wrap_content</item>
	</style>

	<style name="Widget.ListPopupWindowCompat.ListView" parent="android:Widget.ListView">
		<item name="android:cacheColorHint">#00000000</item>
		<item name="android:divider">@drawable/mc__list_divider_holo_dark</item>
		<item name="android:listSelector">@drawable/mc__list_selector_holo_dark</item>
		<item name="android:fadingEdge">none</item>
	</style>

	<style name="Widget.ListPopupWindowCompat.Light.ListView" parent="android:Widget.ListView.White">
		<item name="android:cacheColorHint">#00000000</item>
		<item name="android:divider">@drawable/mc__list_divider_holo_light</item>
		<item name="android:listSelector">@drawable/mc__list_selector_holo_light</item>
		<item name="android:fadingEdge">none</item>
	</style>

	<style name="Widget.ListPopupWindowCompat.ListView.DropDown"/>

	<style name="Widget.ListPopupWindowCompat.Light.ListView.DropDown"/>

	<style name="Widget.ListPopupWindowCompat.ActionButton" parent="android:Widget.ImageButton">
		<item name="android:src">@drawable/mc__ic_menu_moreoverflow_holo_dark</item>
		<item name="android:background">@drawable/mc__list_selector_holo_dark</item>
	</style>

	<style name="Widget.ListPopupWindowCompat.Light.ActionButton" parent="android:Widget.ImageButton">
		<item name="android:src">@drawable/mc__ic_menu_moreoverflow_holo_light</item>
		<item name="android:background">@drawable/mc__list_selector_holo_light</item>
	</style>

	<style name="Widget.ListPopupWindowCompat.ActionButton.Overflow">
		<item name="android:src">@drawable/mc__ic_menu_moreoverflow_holo_dark</item>
	</style>

	<style name="Widget.ListPopupWindowCompat.Light.ActionButton.Overflow">
		<item name="android:src">@drawable/mc__ic_menu_moreoverflow_holo_light</item>
	</style>

</resources>